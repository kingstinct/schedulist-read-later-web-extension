{
  "name": "Schedulist",
  "author": "Kingstinct",
  "version": "0.0.9",
  "description": "Save links for later in Schedulist",
  "permissions": [
    "tabs",
    "contextMenus",
    "*://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "short_name": "Schedulist",
  "homepage_url": "https://www.schedulist.app",
  "offline_enabled": false,
  "omnibox": {
    "keyword": "sch"
  },
  "externally_connectable": {
    "ids": ["*"],
    "matches":[
      "https://*.schedulist.app/*"
    ]
  },
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": [
      "contentScript.js"
    ],
    "css": [
      "assets/css/main.css"
    ]
  }],
  "commands": {
    "save-to-schedulist": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Save to Schedulist"
    },
    "open-schedulist": {
      "suggested_key": {
        "default": "Ctrl+Shift+O"
      },
      "description": "Open Schedulist"
    }
  },
  "browser_action": {
    "default_title": "Save to Schedulist",
    "default_icon": {
      "16": "assets/icons/icon_16.png",
      "48": "assets/icons/icon_48.png",
      "128": "assets/icons/icon_128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon_16.png",
    "48": "assets/icons/icon_48.png",
    "128": "assets/icons/icon_128.png"
  },
  "web_accessible_resources": [
    "assets/images/spinner.gif"
  ],
  "manifest_version": 2
}